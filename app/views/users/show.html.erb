<h1><%= @user.name %></h1>
<p><%= @user.address %></p>

<br>

<%= link_to "Edit", edit_user_path %>

<br><br>

<p><%= link_to "Log Out", session_path, method: :delete %></p>
<br>


<h3>Groups</h3>
<% @user.groups.each do |group| %>
  <%= link_to group.name, group_path(group) %>
<% end %>
<br>
<h3>Meals</h3>
<% @user.groups.each do |group| %>
  <% group.meals.each do |meal|  %>
    <%=link_to meal.name, meal_path(meal)  %>
  <% end %>
<% end %>
