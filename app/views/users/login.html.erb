<% flash[:notice].each do |messages| %>
  <%= messages %>
<% end %>

<%= form_tag '/sessions' do %>
  <%= label_tag :name %>
  <br>
  <%= text_field_tag 'user[name]' %>
  <br><br>
  <%= label_tag :password %>
  <br>
  <%= password_field_tag 'user[password]' %>
  <br><br>
  <%= submit_tag 'Sign In' %>
<% end %>

<br><br>

<%= link_to "Sign Up", new_user_path %>
