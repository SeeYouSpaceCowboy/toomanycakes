<h1>New Meal</h1>

<% if flash[:notice] %>

  <% flash[:notice].each do |error| %>
  <%= error %>.
  <br>
  <% end %>
<% end %>
<br>


<%= form_for @meal do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= label_tag "Portions" %>
<%= select_tag "meal[number]", options_for_select(1..10) %>

<%= f.label :expiration %>
<%= f.date_field :expiration, min: Date.tomorrow, max: Date.today + 7 %>

<%= f.label "imgur URL" %>
<%= f.text_field :img_url %>

<%= submit_tag "Create meal" %>
<% end %>
