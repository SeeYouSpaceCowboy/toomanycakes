<h1>Edit <%= @group.name %></h1>

  <% if flash[:notice] %>
  <% flash[:notice].each do |error| %>
  <%= error %>.
  <br>
  <% end %>
  <% end %>
<br>

<div id='form_container'>
<%= form_for @group do |f| %>
  <div>
 <%= f.label :name %>
 <%= f.text_field :name %>
  </div>
  <div>
 <%= f.label :description %>
 <%= f.text_field :description %>
 </div>
 <%= f.submit "Edit this group" %>
<% end %>
</div>
